# EditorConfig - https://editorconfig.org
# Spójne formatowanie kodu we wszystkich edytorach

root = true

# Domyślne ustawienia dla wszystkich plików
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP
[*.php]
indent_size = 4

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile - wymaga tabulatorów
[Makefile]
indent_style = tab

# Docker
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# Config files
[*.{xml,html,css,scss}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Git
[.git*]
indent_size = 2
