# ============================================
# AI RoomBook
# Przykładowy plik konfiguracji środowiska
# ============================================
# Skopiuj ten plik do .env i dostosuj wartości

# ====================
# Application
# ====================
APP_ENV=dev
APP_SECRET=change_this_to_random_secret_in_production
APP_DEBUG=1

# ====================
# Database (PostgreSQL)
# ====================
DATABASE_URL="postgresql://app:secret@database:5432/conference_rooms?serverVersion=16&charset=utf8"

# Dane dla kontenera PostgreSQL
POSTGRES_USER=app
POSTGRES_PASSWORD=secret
POSTGRES_DB=conference_rooms

# ====================
# RabbitMQ
# ====================
MESSENGER_TRANSPORT_DSN=amqp://guest:guest@rabbitmq:5672/%2f/messages

# Dane dla kontenera RabbitMQ
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ====================
# Frontend
# ====================
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# ====================
# CORS
# ====================
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# ====================
# Docker ports
# ====================
FRONTEND_PORT=3000
BACKEND_PORT=8080
RABBITMQ_MANAGEMENT_PORT=15672
DATABASE_PORT=5432

# ====================
# PIN do API
# ====================
# WAŻNE: Kod z maila rekrutacyjnego
# Kod został przekazany w mailu z zadaniem rekrutacyjnym
API_PIN=your_openai_api_key_here
